<h1><%= @train.color %> Train</h1>

<form action="/trains/<%= @train.id %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <button type="submit">Delete This Train</button>
</form>
<br>

<% if @cities.any? %>
  <h3>Select all cities for the <%= @train.color %> train:</h3>
  <form action="/trains/<%= @train.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @cities.each do |city| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="city_ids[]" value="<%= city.id %>"><%= city.name %>
        </label>
      </div>
      <label for="times">Stop Time</label>
      <select name="times[]" type="text">
        <option value="">Enter Time</option>
        <option value="08:30:00">8:30</option>
        <option value="11:00:00">11:00</option>
        <option value="14:30:00">14:30</option>
        <option value="20:00:00">20:00</option>
      </select>
    <% end %>
    <br>
    <button type="submit">Add cities</button>
  </form>
<% end %>
<hr>

<% if @train.cities.any? %>
  <h3>Here are all the cities this train stops at:</h3>

  <ul>
    <% @train.cities.each do |city| %>
      <li><%= city.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no cities yet!</p>
<% end %>


<a href="/">Return to Main Page</a>
